<!--pages/index/index.wxml-->
<view class="container">
  <view class="userinfo" bindtap="bindViewTag">
    <image src="{{userInfo.avatarUrl}}" class="userinfo-avatar" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
<view class="usermotto">
  <text class="user-motto">{{motto}}</text>
</view>
<view class="show">
  <text class="show-view" bindtap="bindShowView">显示view</text>
</view>

<view class="loacation">
  <text class="my-location" bindtap="bindGetLocation">当前位置</text>
</view>
</view>
